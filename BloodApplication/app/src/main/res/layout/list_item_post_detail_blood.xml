<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_post"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:elevation="3dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <TextView
                android:id="@+id/list_post_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Muhammad Asher Ansari"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/list_post_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_post_name"
                android:layout_marginTop="4dp"
                android:fontFamily="monospace"
                android:maxLines="2"
                android:singleLine="false"
                android:text="3 units of A Positive Blood Required"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/list_post_hospital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_post_unit"
                android:layout_marginTop="4dp"
                android:fontFamily="monospace"
                android:maxLines="2"
                android:text="At Indus Hospital to my Friend"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/urgency_linearLayout"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_below="@+id/list_post_hospital"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Urgency : "
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/list_post_urgency"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Urgent"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contact_linearLayout"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_below="@+id/urgency_linearLayout"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Contact at : "
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/list_post_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="03133025885"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/additional_linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contact_linearLayout"
                android:layout_marginTop="4dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Additional Instuctions :"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/list_post_additional"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="This is the temporary text of additional information"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/volunteer_linearLayout"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_below="@+id/additional_linearLayout"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Volunteers uptill now :"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/list_post_volunteer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="5"
                    android:textSize="16sp" />
            </LinearLayout>
            <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_below="@+id/contact_linearLayout"-->
            <!--android:layout_height="24dp"-->
            <!--android:orientation="horizontal">-->
            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent"-->
            <!--android:textSize="16sp"-->
            <!--android:text="Volunteers uptill now :"-->
            <!--android:gravity="center"/>-->
            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textSize="16sp"-->
            <!--android:gravity="center"-->
            <!--android:text="5"-->
            <!--android:id="@+id/list_post_requirment"/>-->

            <!--</LinearLayout>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_below="@+id/volunteer_linearLayout"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/list_post_volunteer_lbl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_border"
                    android:gravity="center"
                    android:text="Volunteer"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/list_post_comment_lbl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_border"
                    android:gravity="center"
                    android:text="Comment"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>